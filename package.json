{
  "name": "create-react-component",
  "version": "0.0.1",
  "description": "A simple cli tool to create a new file with the empty framework of a react component.",
  "main": "dist/index.js",
  "bin": {
    "crc": "./bin/crc.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "crc": "index.js",
    "lint": "eslint .",
    "test": "nyc ava --tap | tap-nyan",
    "test:watch": "ava --watch",
    "validate": "npm-run-all --parallel lint test build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryanbierce/create-react-component.git"
  },
  "keywords": [
    "js",
    "javascript",
    "react",
    "cli"
  ],
  "author": "Bryan Bierce",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bryanbierce/create-react-component/issues"
  },
  "homepage": "https://github.com/bryanbierce/create-react-component#readme",
  "config": {
    "ghooks": {
      "pre-commit": "npm run validate"
    }
  },
  "files": [
    "dist"
  ],
  "nyc": {
    "check-coverage": true,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "statements": 100,
    "reporter": [
      "text",
      "lcov"
    ],
    "include": [
      "src"
    ]
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.22.2",
    "babel-preset-es2015": "^6.22.0",
    "eslint": "^3.13.1",
    "eslint-plugin-ava": "^4.0.1",
    "eslint-plugin-import": "^2.2.0",
    "flow-bin": "^0.38.0",
    "ghooks": "^2.0.0",
    "npm-run-all": "^4.0.1",
    "nyc": "^10.1.2",
    "rimraf": "^2.5.4",
    "tap-nyan": "^1.1.0"
  },
  "dependencies": {
    "commander": "^2.9.0",
    "lodash": "^4.17.4"
  }
}
